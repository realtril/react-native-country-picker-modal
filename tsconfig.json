{
  "extends": "expo/tsconfig.base",
  "compilerOptions": {
    "strict": true,
    "baseUrl": ".",
    "declaration": true,
    "esModuleInterop": true,
    "jsx": "react-jsx",
    "moduleResolution": "nodenext",
    "paths": {
      "@/*": [
        "./*"
      ],
      "@realtril/react-native-country-picker-modal": ["./src/index.tsx"]
    },
    "module": "NodeNext"
  },
  "include": [
    "**/*.ts",
    "**/*.tsx",
    ".expo/types/**/*.ts",
    "expo-env.d.ts",
    "app.d.ts"
  ]
}
